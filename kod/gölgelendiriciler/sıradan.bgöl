#version 440

in vec2 beneginDokuKonumu;

out vec4 beneginRengi;

// Materyal
uniform sampler2D doku;
uniform vec3 renk;
uniform vec3 tersRenk;

void main() {
	vec4 dokuRengi = texture(doku, beneginDokuKonumu);
	//beneginRengi = dokuRengi * vec4(tersRenk + (renk - tersRenk) * dokuRengi.a, 1.0);
	beneginRengi = vec4(dokuRengi.a < 0.5 ? tersRenk : renk, 1.0);
}
